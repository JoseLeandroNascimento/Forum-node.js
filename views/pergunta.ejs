<%- include("partials/header.ejs") %>

    <body>

        <%- include("partials/navbar.ejs") %>

            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>

                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>

                <form action="/responder" method="post">

                    <h3>Responda</h3>
                    <label for="corpo">Resposta</label>
                    <textarea id="corpo" name="corpo" placeholder="Digite sua respota" class="form-control"></textarea>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button class="btn btn-primary mt-3">Responder</button>

                </form>

                <hr>

                <h3>Respostas</h3>

                <% respostas.forEach(resposta => { %>
                    <br>
                    <div class="card mb-3">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo %>
                            </p>
                        </div>
                    </div>


                    <% }) %>


            </div>

    </body>

    <%- include('partials/footer.ejs') %>